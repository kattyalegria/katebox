<br><br>
<div class="container">
    <div class="card">
        <div class="card-header">
            <h1>Buscar Productos</h1>
        </div>
        <div class="card-body">
            <table class="table table-striped" id="buscador">
                <thead>
                    <tr>
                    <th>Imagen</th>
                    <th>Codigo</th>
                    <th>Nombre</th>
                    <th>Descripcion</th>
                    <th>Precio</th>
                    <th>Existencia</th>
                    <th>Categoria</th>
                    <th colspan="2"></th>
                    </tr>
                </thead>
                <tbody>
                    <% @products.each do |product| %>
                    <tr>
                        <td><%= image_tag(product.image, style: "max-width: 20%") if product.image.attached? %></td>
                        <td><%= product.codigo %></td>
                        <td><%= product.nombre %></td>
                        <td><%= product.descripcion %></td>
                        <td><%= product.precio %></td>
                        <td><%= product.existencia %></td>
                        <td><%= product.category.nombre %></td>
                        <td><%= link_to "Agregar al carrito", agregar_carrito_path(product), class: "btn btn-primary" %></td>
                    </tr>
                    <% end %>
                </tbody>
            </table>
        </div>    
    </div>
</div>
<script>
    $(document).ready( function () {
        $('#buscador').DataTable();
    });
</script>